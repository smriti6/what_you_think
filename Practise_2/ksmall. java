import java.util.Arrays;
  
public class ksmall {
    public static void main(String[] args) {
        
        // Example 1:

        // Input:
        // N = 6
        // arr[] = 7 10 4 3 20 15
        // K = 3
        // Output : 7
        // Explanation :
        // 3rd smallest element in the given 
        // array is 7.

        int [] arr={7, 10, 4, 3, 20, 15};
        int k=3;
        System.out.println(kthSmallest(arr, k));

    }

    public static int kthSmallest(int[] arr, int k) 
    { 
        //Your code here
        //l r start end
        Arrays.sort(arr);
        if(k==1){
            return arr[0];
        }
        else {
            return arr[k-1];
        }
    }
        
}
